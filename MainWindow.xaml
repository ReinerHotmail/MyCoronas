<Window x:Class="MyCoronas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyCoronas"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Gray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="53*" />
            <ColumnDefinition Width="347*" />
        </Grid.ColumnDefinitions>
        <Canvas x:Name="MyCanvas" Grid.Column="1" Margin="20,20,20,20" Background="White" />
        <StackPanel>
            <Button x:Name="ButtonStart" Content="Start" Margin="10,10,10,10" Click="ButtonStart_Click" />
            <Button x:Name="ButtonStop" Content="Stop" Margin="10,10,10,10" Click="ButtonStop_Click" />
            <ListBox x:Name="ListBoxInf" Height="100" />
        </StackPanel>

    </Grid>
</Window>
